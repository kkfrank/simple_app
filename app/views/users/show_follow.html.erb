<% provide(:title,@user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <%=render 'shared/user_info'%>
    </section>

    <section>
      <%= render 'shared/stats'%>

      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user|%>
                <%= link_to gravatar_for(user,size:30),user %>
            <% end %>
          </div>
      <% end %>

    </section>
  </aside>

  <div class="col-sm-8">
    <h3><%=@title%></h3>

    <% if @users.any? %>
        <ul class="users follow">
          <% @users.each do |user|%>
              <%= render @users %>
          <% end %>
        </ul>
        <%= will_paginate @users%>
    <% end %>
  </div>
</div>
